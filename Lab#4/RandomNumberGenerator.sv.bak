import random_pkg::*;

module RandomNumberGenerator;
  rand int myRandomNumber;
  
  // Restricciones para el rango 1 a 63
  constraint withinRange {
    myRandomNumber inside {[1:63]};
  }
  
  initial begin
    // Inicializar la generación de números aleatorios
    void'(randomize() with {myRandomNumber == 0;});
    
    // Generar y mostrar números aleatorios
    for (int i = 0; i < 10; i = i + 1) begin
      void'(randomize());
      $display("Número aleatorio generado: %0d", myRandomNumber);
    end
    
    // Finalizar la simulación
    $finish;
  end
endmodule

module testbench;
  RandomNumberGenerator rng;
  
  initial begin
    // Simular durante un período de tiempo
    #1000;
    $finish;
  end
endmodule

// Ejecutar la simulación
initial begin
  $dumpfile("dump.vcd");
  $dumpvars(0, testbench);
  $display("Comenzando simulación...");
  $timeformat(-9, 3, " ns", 0);
  $monitor("Tiempo = %t", $realtime);
  $starttest("RandomNumberGenerator");
  testbench tb();
  $finish;
end
